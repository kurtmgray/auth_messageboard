extends layout 

block content
    h1= title
        
    form(action="" method="POST")
        div.form-group    
            label(for="fname")= 'First Name'
            input#first_name.form-control(name="fname" placeholder="John" type="text" required="true" value=(undefined===data ? '' : data.fname))
            label(for="lname")= 'Last Name'
            input#last_name.form-control(name="lname" placeholder="Doe" type="text" required="true" value=(undefined===data ? '' : data.lname))
        div.form-group
            label(for="username")= 'Username'
            input#first_name.form-control(name="username" placeholder="username" type="text" required="true" value=(undefined===data ? '' : data.username))
            label(for="password")= 'Password'
            input#first_name.form-control(name="password" placeholder="password" type="password")
        
        button='Sign Up'